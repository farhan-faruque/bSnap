<div class="container">

  <div class="omb_login">
    <h3 class="omb_authTitle">Register</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => { class: "form-horizontal" }) do |f| %>
      <fieldset>
        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="name">Name:</label>
          <div class="col-md-4">
            <%= f.text_field :user_name, autocomplete: "off",placeholder: "", class: "form-control input-md" %>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="email">Email:</label>
          <div class="col-md-4">
            <%= f.email_field :email,class:"form-control input-md" %>
          </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="passwordinput">Password:</label>
          <div class="col-md-4">

            <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off",class: "form-control input-md" %>

          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="passwordconfirm">Confirm Password:</label>
          <div class="col-md-4">
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-md" %>
          </div>
        </div>


        <!-- Button (Double) -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="submit"></label>
          <div class="col-md-8">
            <%= f.submit "Sign up",class:"btn btn-primary" %>
          </div>
        </div>

      </fieldset>
      <%end%>
  </div>
</div>
